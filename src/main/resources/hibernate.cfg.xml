<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">app123</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/salesorderapp</property>
        <property name="hibernate.connection.username">salesorderuser</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.salesorderapp.hibernate.entity.Student" />
        <mapping class="com.salesorderapp.hibernate.entity.Customer" />
        <mapping class="com.salesorderapp.hibernate.entity.Product" />
        <mapping class="com.salesorderapp.hibernate.entity.OrderLines" />
        <mapping class="com.salesorderapp.hibernate.entity.SaleOrder" />
    </session-factory>
</hibernate-configuration>
